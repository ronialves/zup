@import 'variables.scss';

.ui-loading-panel {
    position: fixed;
    top: 0px;
    left: 0px;
    z-index: 10000;
    background: $ui-primary-color;
    width: 100%;
    height: 100%;
    display: block;
}

.ui-loading-spinner {
    position: fixed;
    width: 202px;
    height: 202px;
    margin-left: calc(50vw - 100px);
    margin-top: calc(50vh - 100px);
    border-radius: 50%;
    background: transparent;
    border-top: 3px solid $ui-blue-color;
    border-right: 3px solid $ui-blue-color;
    animation: spin 2s linear infinite, spin-color 2s linear infinite;
}
.ui-logo {
    position: fixed;
    width: 200px;
    height: 200px;
    margin-top: calc(50vh - 99px);
    margin-left: calc(50vw - 99px);
    border-radius: 50%;
}

.ui-logo-img {
    margin-top: 60px;
    margin-left: 15px;
}
  
@keyframes spin {
    0% {
        transform: rotate(0deg); 
    }
    100% {
        transform: rotate(360deg); 
    }
}
@keyframes spin-color {
    0% {
        border-top-color: $ui-green-color;
        border-right-color: $ui-green-color;
    }
    33% {
        border-top-color: $ui-blue-color;
        border-right-color: $ui-blue-color;
    }
    66% {
        border-top-color: $ui-purple-color;
        border-right-color: $ui-purple-color;
    }
    100% {
        border-top-color: $ui-red-color;
        border-right-color: $ui-red-color;
    }
}