@import "../app.component.scss";

.ui-system-logo {
    display: flex;
    align-content: center;
    align-items: center;
    height: 64px;
    cursor: pointer;
}
.ui-system-logo-img {
    margin: auto;
    width: 80%;
    transition: width 0.3s ease-out;
}
.ui-system-logo-img-retracted {
    width: 100%;
    transition: width 0.3s ease-out;
}
.ui-appname {
    width: 100%;
    height: 34px;
    text-align: center;
    color: $ui-white-color;
    font-size: 14px;
    cursor: pointer;
}
.ui-appname-detail {
    visibility: visible;
    opacity: 1;
    transition: visibility 0.9s ease-out;
    transition: opacity 0.9s ease-out;
}
.ui-appname-detail-retracted {
    visibility: hidden;
    opacity: 0;
    transition: visibility 0.3s ease-out;
    transition: opacity 0.3s ease-out;
}
.ui-divisor {
    float: left;
    width: 90%;
    border-bottom: 1px solid #e6e6e6;
    margin-left: 5%;
}
.ui-options {
    float: left;
    height: calc(100% - 165px);
    width: 100%;
    padding: 20px 0;
}
.ui-option {
    width: 100%;
    height: 42px;
    padding: 0px;
    border-left: 4px solid rgba(0,0,0, 0);
    transition: width 0.3s ease-out;
}
.ui-option:hover {
    box-shadow: -1px 1px 3px rgba(0, 0, 0, 0.6);
}
.ui-option-retracted {
    transition: width 0.3s ease-out;
}
.ui-option-retracted:hover {
    background: #003245 !important;
    z-index: 1000;
    width: 260px !important;
    transition: width 0.3s ease-out;
}
.ui-option-retracted:hover .ui-option-name-retracted {
    visibility: visible;
    width: calc(100% - 64px);
    transition: visibility 0.3s ease-out;
    transition: width 0.3s ease-out;
}
.ui-option-active {
    background: $ui-active-shadow-color;
    border-left: 4px solid $ui-primary-color;
}
.ui-option-icon {
    float: left;
    font-size: 18px;
    line-height: 42px;
    color: $ui-white-color;
    margin-left: 15px;
}
.ui-option-name {
    display: inline-block;
    width: calc(100% - 64px);
    text-align: left;
    margin-left: 20px;
    font-size: 14px;
    line-height: 42px;
    height: 42px;
    color: $ui-white-color;
}
.ui-option-name-retracted {
    visibility: hidden;
    width: 0px;
    transition: visibility 0.3s ease-out;
    transition: width 0.3s ease-out;
}